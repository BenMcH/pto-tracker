<p id="notice"><%= notice %></p>

<h1>Listing Time Off Instances</h1>
<% if !@time_off_instances.empty? %>
  <table border=2>
    <thead>
      <tr>
        <th>Employee</th>
        <th>Hours used</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @time_off_instances.each do |time_off_instance| %>
        <tr>
          <td><%= time_off_instance.employee.name %></td>
          <td><%= time_off_instance.hours_used %></td>
          <td><%= link_to 'Details', time_off_instance %></td>
          <td><%= link_to 'Edit', edit_time_off_instance_path(time_off_instance) %></td>
          <td><%= link_to 'Delete', time_off_instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<p> There are no time off instances in the database</p>
<% end %>
<br>

<%= link_to 'New Time off instance', new_time_off_instance_path %>
